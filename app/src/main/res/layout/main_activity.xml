<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50sp"/>

    <GridLayout android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_gravity="center">

        <Button android:id="@+id/btn00"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn01"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn02"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn10"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn11"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn12"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn20"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn21"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <Button android:id="@+id/btn22"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>
    </GridLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="@string/resultLabel"/>

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/playAgain"
        android:visibility="gone"
        android:background="@color/purple_200"
        android:textSize="50sp"
        android:layout_marginTop="16dp" />

</LinearLayout>